<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/lr"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical">

  <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txtName"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/item.friend.padding.small"
    android:fontFamily="sans-serif-light"
    android:textColor="@android:color/black"
    android:textSize="@dimen/item.friend.text.size.biggest" />

  <TextView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/txtId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/item.friend.padding.small"
    android:paddingLeft="@dimen/item.friend.padding.small"
    android:paddingRight="@dimen/item.friend.padding.small"
    android:fontFamily="sans-serif-light"
    android:textColor="@android:color/darker_gray"
    android:textSize="@dimen/item.friend.text.size.big" />

</LinearLayout>