<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

 <LinearLayout
   android:id="@+id/lrScan"
   android:layout_width="match_parent"
   android:gravity="center_horizontal"
   android:layout_height="wrap_content"
   android:visibility="gone"
   android:orientation="horizontal">

  <TextView
    android:id="@+id/txtScanning"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/fg.scanner.text.margin.big"
    android:layout_marginTop="@dimen/fg.scanner.text.margin.big"
    android:textColor="@android:color/white"
    android:textSize="@dimen/fg.scanner.text.size.big"/>

  <ProgressBar
    android:theme="@style/ProgressBar"
    android:id="@+id/progressBar"
    android:layout_gravity="center_vertical"
    android:layout_marginLeft="@dimen/fg.scanner.progress.margin.small"
    android:layout_marginRight="@dimen/fg.scanner.progress.margin.small"
    android:indeterminate="true"
    android:visibility="gone"
    style="?android:attr/progressBarStyleLarge"
    android:layout_width="@dimen/fg.scanner.progress.size"
    android:layout_height="@dimen/fg.scanner.progress.size"/>
 </LinearLayout>


 <android.support.v7.widget.RecyclerView
   android:id="@+id/listPhotos"
   android:layout_width="match_parent"
   android:layout_height="match_parent"/>
</LinearLayout>