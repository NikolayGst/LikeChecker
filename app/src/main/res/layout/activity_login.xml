<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <ImageView
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:src="@drawable/bg"
    android:scaleType="centerCrop" />

  <TextView
    android:id="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/login.title.margin.big"
    android:fontFamily="sans-serif-light"
    android:gravity="center_horizontal|top"
    android:text="@string/app_name"
    android:textColor="@android:color/white"
    android:textSize="@dimen/login.title.text.size" />
  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/login.text.margin.one"
    android:layout_below="@id/title"
    android:fontFamily="sans-serif-light"
    android:gravity="center_horizontal|top"
    android:text="@string/textview.text.desc.like"
    android:textColor="@android:color/white"
    android:textSize="@dimen/login.disc.text.size" />

  <TextView
    android:id="@+id/txtAuth"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/login.auth.margin.biggest"
    android:fontFamily="sans-serif-light"
    android:gravity="center_horizontal"
    android:text="@string/textview.text.auth"
    android:textColor="@android:color/white"
    android:textSize="@dimen/login.auth.text.size" />

  <android.support.v7.widget.AppCompatButton
    android:id="@+id/btnLogin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/login.btn.margin.big"
    android:layout_marginLeft="@dimen/login.btn.margin.biggest"
    android:layout_marginRight="@dimen/login.btn.margin.biggest"
    android:layout_below="@id/txtAuth"
    android:background="@drawable/btn"
    android:text="@string/button.text.login"
    android:textColor="@android:color/white" />

  <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/login.author.margin.small"
    android:layout_alignParentBottom="true"
    android:fontFamily="sans-serif-light"
    android:gravity="center"
    android:text="@string/textview.text.author"
    android:textColor="@android:color/white"
    android:textSize="@dimen/login.author.text.size" />

</RelativeLayout>
